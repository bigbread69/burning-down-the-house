---
interface Props {
	title?: string;
}

const { title = "Burning Down the House" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;1,400&family=Inter:wght@400;500&display=swap" rel="stylesheet">
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html {
		font-size: 18px;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		background: #0f1405;
	}

	body {
		margin: 0;
		padding: 3rem 0 4rem;
		width: 100%;
		min-height: 100vh;
		color: #e5e7eb;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
		font-weight: 400;
		line-height: 1.8;
		background: linear-gradient(135deg, #0f1405 0%, #0d1204 50%, #0a0f03 100%);
	}

	h1, h2, h3, h4, h5, h6 {
		font-family: 'Crimson Text', Georgia, serif;
		font-weight: 600;
		color: #e5e7eb;
		line-height: 1.25;
		margin: 0;
	}

	h1 {
		font-size: 2.75rem;
		letter-spacing: 0.02em;
		margin-bottom: 1.75rem;
	}

	h2 {
		font-size: 2rem;
		margin-bottom: 1.25rem;
		margin-top: 2.75rem;
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		margin-top: 2.25rem;
	}

	p {
		margin: 0 0 1.75rem 0;
	}

	a {
		color: #c97d5a;
		text-decoration: underline;
		text-decoration-thickness: 1px;
		text-underline-offset: 0.25em;
		transition: color 0.18s ease, opacity 0.18s ease;
	}

	a:hover {
		opacity: 0.9;
		color: #c97d5a;
	}

	ul, ol {
		margin: 0 0 1.5rem 0;
		padding-left: 1.5rem;
	}

	li {
		margin-bottom: 0.75rem;
	}

	button {
		font-family: 'Inter', sans-serif;
		font-size: 0.9rem;
		font-weight: 500;
		background-color: #c97d5a;
		color: #0b1120;
		border: none;
		padding: 0.55rem 1.4rem;
		cursor: pointer;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		transition: background-color 0.12s ease, transform 0.08s ease, box-shadow 0.08s ease, opacity 0.08s ease;
		border-radius: 999px;
		box-shadow: 0 8px 22px rgba(0, 0, 0, 0.4);
	}

	button:hover {
		opacity: 0.96;
		transform: translateY(-1px);
		box-shadow: 0 14px 34px rgba(0, 0, 0, 0.55);
	}

	input[type="email"] {
		font-family: 'Inter', sans-serif;
		font-size: 1rem;
		padding: 0.875rem 1rem;
		border: 1px solid #c8c0b2;
		background-color: #f7f2ea;
		color: #151515;
		width: 100%;
		max-width: 400px;
	}

	input[type="email"]:focus {
		outline: none;
		border-color: #161616;
		box-shadow: 0 0 0 2px rgba(22, 22, 22, 0.08);
	}

	::placeholder {
		color: #666;
		opacity: 1;
	}
</style>
